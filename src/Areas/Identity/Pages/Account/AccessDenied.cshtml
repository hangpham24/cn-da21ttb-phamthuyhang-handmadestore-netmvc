@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Không có quyền truy cập";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="text-center bg-white shadow-md rounded-lg p-8">
        <h1 class="text-4xl font-bold text-red-600">@ViewData["Title"]</h1>
        <p class="mt-4 text-lg text-gray-700">Bạn không có quyền truy cập trang này!</p>
        <div class="mt-6">
            <a href="/" class="inline-block px-6 py-3 bg-blue-600 text-white font-medium text-sm leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">
                Trở về trang chủ
            </a>
        </div>
    </div>
</div>
