@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<h1 class="text-center mb-4 mt-10 ">@ViewData["Title"]</h1>
<p class="text-center">Vui lòng nhập email và tạo mật khẩu mới.</p>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <form method="post" class="form-container">
                <div asp-validation-summary="ModelOnly" class="error-summary"></div>

                <input asp-for="Input.Code" type="hidden" />

                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="error-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label">Mật khẩu mới</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="error-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="error-message"></span>
                </div>

                <button type="submit" style="background-color:#d57423" class="btn-submit">Đặt lại mật khẩu</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-container {
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
    }

    .btn-submit {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
    }

        .btn-submit:hover {
            background-color: #0056b3;
        }

    .error-summary {
        color: red;
        margin-bottom: 15px;
        font-size: 14px;
    }

    .error-message {
        color: red;
        font-size: 12px;
    }
</style>
