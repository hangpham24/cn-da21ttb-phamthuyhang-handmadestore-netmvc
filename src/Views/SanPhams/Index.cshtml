                color: #aaa;
            }

        .search-button {
            background: #f28123;
            color: #fff;
            padding: 12px 20px;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border-top-right-radius: 30px;
            border-bottom-right-radius: 30px;
            transition: background-color 0.3s ease;
        }

            .search-button:hover {
                background: #f28123;
            }

            .search-button i {
                font-size: 18px;
            }

        /* Product Image Styling */
        .product-image img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            object-position: center;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .search-form {
                max-width: 90%;
            }

            .search-input {
                font-size: 14px;
                padding: 10px 15px;
            }

            .search-button {
                padding: 10px 15px;
            }
        }
    </style>

    <style>
        .product-image img {
            width: 100%;
            height: 300px; /* Thay đổi chiều cao theo ý bạn */
            object-fit: cover; /* Đảm bảo ảnh phủ đầy khung mà không bị biến dạng */
            object-position: center; /* Đảm bảo ảnh được căn giữa trong khung */
        }
    </style>

}

