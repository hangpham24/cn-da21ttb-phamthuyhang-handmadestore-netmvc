@model WebHM.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if (User.IsInRole("Seller"))
    {
        Layout = "~/Views/Shared/_SellerLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="max-w-xl mx-auto mt-10 bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-semibold text-center text-gray-900 dark:text-white mb-4">Xóa Sản Phẩm</h1>
    <p class="text-center text-gray-700 dark:text-gray-300 mb-6">
        Bạn có chắc chắn muốn xóa sản phẩm này không? Hành động này không thể hoàn tác.
    </p>

    <div class="space-y-4">
        <!-- Tên sản phẩm -->
        <div class="flex justify-between">
            <span class="font-medium text-gray-900 dark:text-white">Tên sản phẩm:</span>
            <span class="text-gray-700 dark:text-gray-300">@Html.DisplayFor(model => model.TenSanPham)</span>
        </div>

        <!-- Giá -->
        <div class="flex justify-between">
            <span class="font-medium text-gray-900 dark:text-white">Giá:</span>
            <span class="text-gray-700 dark:text-gray-300">@Html.DisplayFor(model => model.Gia)</span>
        </div>

        <!-- Mô tả -->
        <div class="flex justify-between">
            <span class="font-medium text-gray-900 dark:text-white">Mô tả:</span>
            <span class="text-gray-700 dark:text-gray-300">@Html.DisplayFor(model => model.MoTa)</span>
        </div>

        <!-- Hình ảnh -->
        <div class="flex justify-between">
            <span class="font-medium text-gray-900 dark:text-white">Hình ảnh:</span>
            <span class="text-gray-700 dark:text-gray-300">@Html.DisplayFor(model => model.HinhAnh)</span>
        </div>

        <!-- Danh mục -->
        <div class="flex justify-between">
            <span class="font-medium text-gray-900 dark:text-white">Danh mục:</span>
            <span class="text-gray-700 dark:text-gray-300">@Html.DisplayFor(model => model.DanhMuc.MaDanhMuc)</span>
        </div>

        <!-- Người bán -->
        <div class="flex justify-between">
            <span class="font-medium text-gray-900 dark:text-white">Người bán:</span>
            <span class="text-gray-700 dark:text-gray-300">@Html.DisplayFor(model => model.NguoiBan.Id)</span>
        </div>
    </div>

    <!-- Form hành động -->
    <form asp-action="Delete" method="post" class="mt-6 space-y-4">
        <input type="hidden" asp-for="MaSanPham" />
        <div class="flex justify-between">
            <button type="submit" class="w-full text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900">
                Xóa sản phẩm
            </button>
            <a asp-action="Index" class="w-full ml-4 text-center text-gray-900 bg-gray-200 hover:bg-gray-300 focus:ring-4 focus:outline-none focus:ring-gray-400 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-700 dark:text-white dark:hover:bg-gray-600">
                Quay lại
            </a>
        </div>
    </form>
</div>
