@model IEnumerable<WebHM.Models.ThanhToan>

@{
    ViewData["Title"] = "Index";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SoTien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayThanhToan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhuongThuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonHang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayThanhToan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhuongThuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonHang.MaDonHang)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaThanhToan">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaThanhToan">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaThanhToan">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
